{
  "expo": {
    "name": "SmartSpend",
    "slug": "smartspend",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "plugins": [
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Allow SmartSpend to use the microphone for voice input.",
          "speechRecognitionPermission": "Allow SmartSpend to use speech recognition to add expenses by voice."
        }
      ]
    ],
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0A0F"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Allow SmartSpend to use speech recognition to add expenses by voice.",
        "NSMicrophoneUsageDescription": "Allow SmartSpend to use the microphone for voice input."
      },
      "bundleIdentifier": "com.smartspend.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.png",
        "backgroundColor": "#0A0A0F"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.smartspend.app"
    },
    "web": {
      "favicon": "./assets/logo.png"
    }
  }
}